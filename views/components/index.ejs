<% layout('./boilerplate') -%>
    <div class="text-white w-full h-auto flex justify-center py-10 mt-10">

        <div class="body h-auto md:px-10 px-1 py-5 grid md:grid-cols-3 grid-cols-1 gap-5">

            <% allPosts.forEach(function(post){  %>

                <div class="card card-side bg-base-100 md:w-[420px] md:h-48 h-52  shadow-xl">
                    <figure>
                        <img class="md:h-48 h-52 w-48" src="/images/blogUploads/<%= post.image %>" alt="Blog" />
                    </figure>
                    <div class="card-body">
                        <p><%= post.username %></p> 
                        <h2 class="card-title text-lg"><%= post.title %></h2> <!-- Only 22 Charectores allowed  -->
                        <p class="text-sm"><%= post.body %></p>
                        <!-- Only 50 Charectores allowed  -->
                        <div class="card-actions justify-around">
                            <a onclick="togglelike()" href="#"><i id="likeicon" class='bx bx-like text-lg'></i></a>
                            <a href="#"><i class='bx bxs-comment-detail text-lg'></i></a>
                            <!-- <button class="btn btn-primary btn-xs w-20 font-bold">View</button> -->
                        </div>
                    </div>
                </div>

           <% }) %>

        </div>

        <!-- Wargin Message -->
        <!-- <div class="w-full h-[75vh] flex justify-center items-center">
        <h1 class="text-2xl font-bold antialiased tracking-wide leading-relaxed text-transparent bg-clip-text bg-gradient-to-r from-green-500 via-[#D946EF] to-pink-500">Nice collection of... nothing. Feel free to break the silence or keep staring at this void.</h1>
       </div> -->

    </div>


    <script>
        function togglelike() {
            const likeIcon = document.getElementById('likeicon');

            if (likeIcon.classList.contains('bx-like')) {
                likeIcon.classList.replace('bx-like', 'bxs-like');
            } else {
                likeIcon.classList.replace('bxs-like', 'bx-like');
            }
        }

    </script>