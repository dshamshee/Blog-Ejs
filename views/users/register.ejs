<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <link rel="shorcut icon" type="x-icon" href="./images/favicon.png">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Registration</title>
    <link rel="stylesheet" href="/stylesheets/output.css">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
</head>

<body class="bg-[#000000] w-screen h-screen flex justify-center">

    <div class="text-white w-[85%] md:w-full h-full flex flex-col justify-center items-center py-10">
        <h1 class="text-3xl font-bold text-center text-blue-600 mb-5 underline">User SignUp</h1>
        <form action="/user/register" method="post" enctype="multipart/form-data">

            <div class="flex flex-row gap-5">
                <label class="form-control w-full max-w-xs">
                    <div class="label">
                        <span class="label-text">Name<span class="text-red-700 font-bold">*</span></span>
                    </div>
                    <input type="text" name="name" placeholder="Your Name" class="input input-bordered input-primary w-full max-w-xs" required />
                </label>

                <label class="form-control w-full max-w-xs">
                    <div class="label">
                        <span class="label-text">username<span class="text-red-700 font-bold">*</span></span>
                    </div>
                    <input type="text" name="username" placeholder="Username" class="input input-bordered input-primary w-full max-w-xs" required />
                </label>
            </div>


            <div class="flex flex-row gap-5">
                <label class="form-control w-full max-w-xs">
                    <div class="label">
                        <span class="label-text">Email<span class="text-red-700 font-bold">*</span></span>
                    </div>
                    <input type="email" placeholder="Email ID" name="email" class="input input-bordered input-primary w-full max-w-xs" required />
                </label>

                <label class="form-control w-full max-w-xs">
                    <div class="label">
                        <span class="label-text">Password<span class="text-red-700 font-bold">*</span></span>
                    </div>
                    <div class="relative">
                        <input id="password" type="password" placeholder="Password" name="password" class="input input-bordered input-primary w-full max-w-xs" required />
                        <button type="button" onclick="togglePassword()"
                            class="absolute right-3 top-3 text-xl text-gray-500">
                            <i id="toggleIcon" class='bx bx-hide'></i>
                        </button>
                    </div>
                </label>
            </div>

            <div class="flex flex-row gap-5">
                <label class="form-control w-full max-w-xs">
                    <div class="label">
                        <span class="label-text">Profile Picture<span class="text-red-700 font-bold">*</span></span>
                    </div>
                    <input type="file" name="profile_picture" class="file-input file-input-bordered file-input-primary w-full max-w-xs" required />
                </label>
            </div><br>

            <input type="submit" value="SignUp" class="btn btn-accent btn-sm w-full font-bold text-xl">


        </form>
    </div>


    <script>
        function togglePassword() {
            const passwordInput = document.getElementById('password');
            const toggleIcon = document.getElementById('toggleIcon');

            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                toggleIcon.classList.replace('bx-hide', 'bx-show');
            } else {
                passwordInput.type = 'password';
                toggleIcon.classList.replace('bx-show', 'bx-hide');
            }
        }
    </script>

</body>

</html>